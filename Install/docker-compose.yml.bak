services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: Company_Name_Timeclock
    ports:
      - "8080:80"
    environment:
      DB_HOST: host.docker.internal
      DB_NAME: timeclock
      DB_USER: timeclock
      DB_PASS: Password
      DB_TIMEZONE: America/Chicago
    networks:
      - timeclock_network

